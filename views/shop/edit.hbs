<style>
  #search-user, #cog { 
    display: none !important;
  }
</style>
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
      {{ successMsg }}
    </div>
  </div>
</div>
<div class="row">
  <div class="form-wrapper">
    <h1>Editar Producto</h1>
      <form action="/{{ product._id }}?_method=PUT" method="POST">
        <div class="form-group">
          <label for="title">Título</label>
          <input id="title" class="form-control" type="text" name="product[title]" value="{{product.title}}" required>
        </div>
        <div class="form-group">
          <label for="stock">Stock</label>
          <input id="stock" class="form-control" type="number" name="product[stock]" value="{{product.stock}}" required>
        </div>
        <div class="form-group">
          <label for="minimum-stock">Stock mínimo</label>
          <input id="minimum-stock" class="form-control" type="number" name="product[minimumStock]" value="{{product.minimumStock}}" required>
        </div>
        <div class="form-group">
          <label for="image">Imagen</label>
          <input id="image" class="form-control" type="text" name="product[imagePath]" value="{{product.imagePath}}" required>
        </div>
        <div class="form-group">
          <label for="id">Ubicación</label>
          <input id="id" class="form-control" type="text" name="product[location]" value="{{product.location}}">
        </div>
        <div class="form-group">
          <label for="description">Descripción</label>
          <input id="description" class="form-control" type="text" name="product[description]" value="{{product.description}}" required>
        </div>
        <div class="form-group">
          <label for="description">Esta modificación</label>
          <textarea id="lastModified" class="form-control textarea-time" type="text" name="product[lastModified]" readonly rows="2"></textarea>
        </div>
        <div class="form-group">
          <span><strong>Ultima modificación: </strong></span>{{product.lastModified}}
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Actualizar producto</button>
        </div>
        <a href="/">Volver</a>
      </form>
  </div>
</div>