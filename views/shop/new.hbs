<style>
  #search-user, #cog { 
    display: none !important;
  }
</style>
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
      {{ successMsg }}
    </div>
  </div>
</div>
<div class="row">    
  <div class="form-wrapper">
     <h1>Crear producto</h1>
     <form action="/" method="POST">
       <div class="form-group">
         <div class="form-group">
           <input class="form-control" type="text" name="title" placeholder="Nombre" required>
         </div>
         <div class="form-group">
           <input class="form-control" type="number" name="stock" placeholder="Stock" required>
         </div>
         <div class="form-group">
           <input class="form-control" type="number" name="minimumStock" placeholder="Stock mínimo" required>
         </div>
         <div class="form-group">
           <input class="form-control" type="text" name="imagePath" placeholder="Imagen" required>
         </div>
         <div class="form-group">
           <input class="form-control" type="text" name="location" placeholder="Ubicación" required>
         </div>
         <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="Descripción" required>
          </div>
         <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Agregar producto</button>
         </div>
       </div>
     </form>
     <a href="/">Volver</a>
  </div>
</div>